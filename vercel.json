{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/automation-scheduler",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/send-certificate-emails",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/publish-scheduled",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/compute-person-features",
      "schedule": "0 2 * * *",
      "comment": "GDP-011: Compute person features daily at 2am"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/healthz",
      "destination": "/api/health"
    }
  ]
}
